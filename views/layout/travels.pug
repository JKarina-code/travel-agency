
.row.next-travels
  each travel in travels
    div.col-md-6.col-lg-4.mb-4
      .card
        img.card-img-top(src=`img/destination_${travel.image}.jpg`)
        .card-body 
          h2=travel.title 
          p
            svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
              path(stroke='none' d='M0 0h24v24H0z' fill='none')
              rect(x='4' y='5' width='16' height='16' rx='2')
              line(x1='16' y1='3' x2='16' y2='7')
              line(x1='8' y1='3' x2='8' y2='7')
              line(x1='4' y1='11' x2='20' y2='11')
              rect(x='8' y='15' width='2' height='2')

            | #{travel.departure_date} - #{travel.return_date}
          p 
            svg.icon.icon-tabler.icon-tabler-tag(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
              path(stroke='none' d='M0 0h24v24H0z' fill='none')
              path(d='M11 3l9 9a1.5 1.5 0 0 1 0 2l-6 6a1.5 1.5 0 0 1 -2 0l-9 -9v-4a4 4 0 0 1 4 -4h4')
              circle(cx='9' cy='9' r='2')
            |  #{travel.price} 
          p= travel.description.substr(0, 100) + '...' 
          a(href=`travels/${travel.slug}`, class="btn btn-success btn-block") More Information